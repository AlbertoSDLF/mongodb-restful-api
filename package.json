{
  "name": "mongodb-restful-api",
  "version": "1.0.0",
  "description": "An API built with NodeJS, Express, MongoDB and TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "test": "mocha --reporter spec --compilers ts:ts-node/register 'test/**/*.test.js'",
    "watch": "mocha-typescript-watch",
    "prepare": "tsc",
    "build": "tsc",
    "dev": "ts-node ./lib/main.ts",
    "start": "nodemon ./dist/main.js",
    "prod": "npm run build && npm run start"
  },
  "keywords": [
    "API",
    "JWT",
    "MongoDB",
    "Restful"
  ],
  "author": "Alberto Saez de la Fuente",
  "license": "ISC",
  "dependencies": {
    "@nestjs/cli": "^5.1.2",
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@types/i18n": "^0.8.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongoose": "^5.0.14",
    "@types/node": "~8.9.4",
    "change-case-object": "^2.0.0",
    "http-status-codes": "^1.3.0",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^8.2.2",
    "mongoose": "^5.1.2",
    "reflect-metadata": "^0.1.12",
    "ts-node": "^3.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0"
  }
}
