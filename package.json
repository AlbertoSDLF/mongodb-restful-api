{
  "name": "mongodb-restful-api-express",
  "version": "1.0.0",
  "description": "A restful API built with NodeJS, Restify, MongoDB and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run tslint && tsc",
    "dev": "ts-node ./lib/server.ts",
    "doc": "compodoc -p tsconfig.json --hideGenerator --coverageTest=90 --theme postmark",
    "docker": "docker-compose up -d",
    "performance": "artillery -o reports/performance/performance run performance.json && artillery report reports/performance/performance",
    "preinstall": "npm install -g typescript tslint compodoc artillery",
    "prod": "npm run preinstall && npm install && npm run build",
    "start": "nodemon ./dist/server.js",
    "test": "NODE_ENV=Test mocha --reporter spec --compilers ts:ts-node/register test/**/*.test.ts",
    "tslint": "tslint -c ./tslint.json 'lib/**/*.ts'"
  },
  "keywords": [
    "Alpine",
    "API",
    "Carbon",
    "Compodoc",
    "Docker",
    "Docker-compose",
    "Express",
    "MongoDB",
    "NodeJS",
    "Restful",
    "TSLint",
    "TypeScript"
  ],
  "author": "albertosdlf433@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/i18n": "^0.8.3",
    "@types/restify": "^7.2.0",
    "@types/restify-errors": "^4.3.3",
    "body-parser": "^1.18.2",
    "change-case-object": "^2.0.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.0.14",
    "nodemon": "^1.17.3",
    "path-match": "^1.2.4",
    "reflect-metadata": "^0.1.12",
    "restify": "^7.2.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/mocha": "^5.2.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.2.0",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  }
}
